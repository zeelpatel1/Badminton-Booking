generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}


//////////////////////
// USER (CLERK READY)
//////////////////////

model User {
  id        Int    @id @default(autoincrement())
  clerkId   String @unique
  name      String?
  email     String @unique
  phone     String?
  role      Role   @default(USER)


  bookings  Booking[]
  waitlists Waitlist[]

  createdAt DateTime @default(now())
}

//////////////////////
// BOOKING (ROOT)
//////////////////////

model Booking {
  id        Int      @id @default(autoincrement())

  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  date      DateTime
  startTime DateTime
  endTime   DateTime

  totalPrice Int
  status     BookingStatus @default(CONFIRMED)

  courtReservation       CourtReservation?
  equipmentReservations  EquipmentReservation[]
  coachReservation       CoachReservation?

  createdAt DateTime @default(now())
}

//////////////////////
// COURTS
//////////////////////

model Court {
  id        Int @id @default(autoincrement())
  name      String
  type      CourtType
  basePrice Int
  enabled   Boolean @default(true)

  reservations CourtReservation[]
  waitlists    Waitlist[]   
}

model CourtReservation {
  id        Int @id @default(autoincrement())

  bookingId Int @unique
  booking   Booking @relation(fields: [bookingId], references: [id])

  courtId   Int
  court     Court @relation(fields: [courtId], references: [id])
}

//////////////////////
// EQUIPMENT
//////////////////////

model Equipment {
  id       Int @id @default(autoincrement())
  name     String
  totalQty Int
  price    Int
  enabled  Boolean @default(true)

  reservations EquipmentReservation[]
}

model EquipmentReservation {
  id          Int @id @default(autoincrement())

  bookingId   Int
  booking     Booking @relation(fields: [bookingId], references: [id])

  equipmentId Int
  equipment   Equipment @relation(fields: [equipmentId], references: [id])

  quantity    Int
}

//////////////////////
// COACHES
//////////////////////

model Coach {
  id           Int @id @default(autoincrement())
  name         String
  pricePerHour Int
  enabled      Boolean @default(true)

  availabilities Availability[]
  reservations  CoachReservation[]
}

model Availability {
  id        Int @id @default(autoincrement())

  coachId   Int
  coach     Coach @relation(fields: [coachId], references: [id])

  date      DateTime
  startTime DateTime
  endTime   DateTime

  isBooked  Boolean @default(false)

  reservation CoachReservation?
}

model CoachReservation {
  id              Int @id @default(autoincrement())

  bookingId       Int @unique
  booking         Booking @relation(fields: [bookingId], references: [id])

  availabilityId  Int @unique
  availability    Availability @relation(fields: [availabilityId], references: [id])

  coachId         Int
  coach           Coach @relation(fields: [coachId], references: [id])

  skillLevel      SkillLevel
}

//////////////////////
// PRICING RULES
//////////////////////

model PricingRule {
  id        Int @id @default(autoincrement())
  name      String
  type      PricingRuleType
  value     Int
  isPercent Boolean
  priority  Int
  enabled   Boolean @default(true)

  createdAt DateTime @default(now())
}

//////////////////////
// WAITLIST
//////////////////////

model Waitlist {
  id        Int @id @default(autoincrement())

  userId    Int
  user      User @relation(fields: [userId], references: [id])

  courtId   Int
  court     Court @relation(fields: [courtId], references: [id])

  date      DateTime
  startTime DateTime
  endTime   DateTime

  createdAt DateTime @default(now())
}

//////////////////////
// ENUMS
//////////////////////

enum BookingStatus {
  CONFIRMED
  CANCELLED
}

enum CourtType {
  INDOOR
  OUTDOOR
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum PricingRuleType {
  PEAK_HOUR
  WEEKEND
  INDOOR
  EQUIPMENT
  COACH
}

enum Role {
  USER
  ADMIN
}
